{
  "schemaVersion": 1,
  "id": "boatiview",
  "version": "${version}",

  "name": "Boat Item View",
  "description": "The Boat Item View mod allows you to view your mainhand or offhand items whilst sitting in a moving boat.",
  "authors": [
    "50ap5ud5"
  ],
  "contact": {
    "homepage": "https://github.com/50ap5ud5",
    "sources": "https://github.com/50ap5ud5/BoatItemView",
    "issues":"https://github.com/50ap5ud5/BoatItemView/issues"
  },

  "license": "https://raw.githubusercontent.com/50ap5ud5/BoatItemView/1.16.x-forge/LICENSE",
  "icon": "assets/boatiview/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "me.soapsuds.boatiview.BoatItemView"
    ],
    "client":[
       "me.soapsuds.boatiview.BoatItemViewClient"
    ],
    "modmenu":[
        "me.soapsuds.boatiview.compat.ModMenuConfig"
    ]
  },
  "accessWidener":"boatiview.accesswidener",
  "mixins": [
    "boatiview.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "cloth-config2": "*",
    "mod-menu":"*"
  }
}
